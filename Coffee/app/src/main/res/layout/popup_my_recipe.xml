<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="350dp"
    android:layout_height="610dp"
    android:background="@drawable/bg_main_round_box"
    android:backgroundTint="#E8D1B8">

    <ImageView
        android:id="@+id/img_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_more_vert"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="8dp"/>

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="커피명"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="110dp"
        android:textSize="24dp"
        android:textStyle="bold"
        android:textColor="#333"/>

    <ImageView
        android:id="@+id/img_pic"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:srcCompat="@drawable/ic_photo"
        android:background="@drawable/bg_main_circle"
        app:layout_constraintTop_toBottomOf="@id/txt_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="18dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/img_pic"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:background="@drawable/bg_main_round_box"
        android:backgroundTint="#fff"
        android:layout_marginTop="60dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="정보"
            android:textSize="14dp"
            android:textColor="#333"
            android:textStyle="bold"
            android:layout_marginStart="18dp"
            android:layout_marginTop="18dp"/>

        <TextView
            android:id="@+id/txt_contents"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Size: Tall(355ml)\nCaffeine: 180 mg"
            android:textStyle="bold"
            android:textSize="18dp"
            android:textColor="#333"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="18dp"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>